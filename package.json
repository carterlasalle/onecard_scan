{
  "name": "onecard-scan",
  "version": "0.1.0",
  "private": true,
  "description": "Web application for scanning student ID cards and creating Apple Wallet passes",
  "author": "Carter LaSalle",
  "license": "MIT",
  "scripts": {
    "dev:frontend": "vite",
    "dev:server": "cd server && npm run dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:server\"",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "setup:certs": "cd server && npm run setup-certs"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.2",
    "axios": "^1.5.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.7",
    "jsbarcode": "^3.11.5", 
    "tesseract.js": "^4.1.1",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.3.4",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "vite": "^4.4.9"
  }
}